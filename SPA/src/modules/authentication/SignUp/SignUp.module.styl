:local(.SignUp)
  display flex
  flex-direction column
  min-width 550px
  max-width 800px
  margin-top -65px

  h3
    font-size 40px
    margin-bottom 10px
  p.tagline
    font-size 14px
    margin-bottom 25px
    font-weight 400
    color $color-less-white 

  form
    display flex
    flex-direction column
    .form_group
      display flex
      justify-content space-between
      .sign_input
        flex-basis 49%

    input 
      width inherit
      height 50px
      padding 8px 8px 8px 20px
      background #212427
      font-size 17px
      border none
      &:focus
        border-color green

    .sign_input
      height 50px
      margin 8px 0
    .form_btn
      margin-top 30px
      height 50px
      font-size 18px
  .divider
    display flex
    align-items center
    font-weight 300
    font-size 13px
    margin-top 25px
    color $color-less-white 
    &::before, &::after 
      flex 1
      content ''
      padding 0.4px
      background-color $color-light-ccc
    &::before
      margin-right 20px
    &::after 
      margin-left 20px
  .other_signup
    display flex
    justify-content center
    margin-top 35px
    > div
      flex-basis 44%
      border 1px solid $color-light-ccc 
      padding 13px
      display flex
      align-items center
      justify-content center
      border-radius 4px
      cursor pointer
      svg
        height 30px
