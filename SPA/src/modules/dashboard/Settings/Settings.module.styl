:local(.Settings)
  display block
  .header
    margin 10px 0 25px
    p
      margin-top 10px
  .tab_content
    width 100%
  .tab_list
    display flex
    button.trigger
      all unset
      padding 10px 20px
      margin-right 22px
      height 25px
      display flex
      justify-content center
      font-size 15px
      line-height 1
      user-select none
      cursor pointer
      color $color-less-white 
      position relative
      z-index 9999
      .active_cursor
        position absolute
        height 35px
        border-radius 10px
        position absolute
        z-index -1
        background $content-sidebar-gray
        width 100%
        inset 0
        mix-blend-mode difference

:local(.General)
  display flex
  padding-top 10px
  width 100% 
  color $color-less-white 
  flex-direction column
  .basic, .preferences
    margin-top 15px
    width 100%
    h5
      padding 10px 0 25px
      font-size 22px
      border-bottom 1px solid #8585852e
    .input_obj
      display flex
      border-bottom 1px solid #8585852e
      font-size 15px
      height 120px
      align-items center
      > div:first-of-type
        flex-basis 20%
      .input, .select
        flex-basis 45%
        width 90%
        > div
          min-height 0
        .select_op
          width 250px
      .edit_field
        width 100%
        flex-basis 25%
        display flex
        justify-content end
        > div
          cursor pointer
          text-align right
          border 1px solid $color-light-ccc 
          padding 7px 15px
          color $color-less-white 
          border-radius 6px
          margin-left auto
    .password
      min-height 150px
      height auto
      padding 15px 0
      button
        margin-top 15px
      label
        font-size 15px
        position relative
        .important
          position absolute
          color red
          top 0

:local(.Subscription)
  display block
  color $color-less-white 
  padding-top 25px
  .previous_payments
    margin 25px 0 0
    h3
      margin-bottom 25px
    .grid
      height 400px
      --ag-odd-row-background-color inherit
      :global(.ag-cell-focus)
        border none
      :global(.ag-root-wrapper.ag-ltr.ag-layout-normal)
        border none
      :global(.ag-header.ag-pivot-off.ag-header-allow-overflow)
        display none
      :global(.ag-cell)
        font-size 14px
  .plans
    display flex
    height 400px
    background $content-sidebar-gray
    justify-content space-between
    border-radius 10px
    padding 0 22px
    > div
      margin 20px 0
      flex-basis 32%
      border-radius 10px
      padding 25px 20px
      position relative
      display flex
      flex-direction column
      align-items center
      &.active
        background #181c1f
      .dheader
        display flex
        width 100%
        justify-content space-between
        margin-bottom 25px
        > p
          font-size 15px
          &:first-of-type
            font-size 20px
      .list_container
        width 100%
        .list_item
          margin-top 15px
          display flex
          width 100%
          align-items center
          svg
            margin-right 15px
      button
        position absolute
        bottom 35px
        width 85%
        color $color-less-white 

:local(.Billing)
  display block
  color $color-less-white 
  padding-top 25px
  .previous_payments
    margin 25px 0 0
    h3
      margin-bottom 25px
    .grid
      height 400px
      --ag-odd-row-background-color inherit
      :global(.ag-cell-focus)
        border none
      :global(.ag-root-wrapper.ag-ltr.ag-layout-normal)
        border none
      :global(.ag-header.ag-pivot-off.ag-header-allow-overflow)
        display none
      :global(.ag-cell)
        font-size 14px
      :global(.ag-aria-description-container)
        display none
  .payment_method, .card_details_text
    > p
      font-weight 300
      font-size 13px
      padding-bottom 25px
      border-bottom 1px solid #8585852e
      &:first-of-type
        font-size 16px
        font-weight 600
        padding-bottom 5px
        border-bottom none
  .card_details
    padding-bottom 15px
    margin-top 20px
    border-bottom 1px solid #8585852e
    display flex
    align-items center
    max-width 1000px
    justify-content space-between
    label
      font-size 15px
    p 
      border none
    .card_details_deet
      margin-left 30px
      width 600px
      > div
        width 100%
        display flex
        .input
          flex-basis 46%
          margin-right 15px
  .RadioGroupRoot
    display flex
    flex-direction column
    .Label
      padding-left 10px
      display flex
      align-items center
      small
        color #5c5b5b
        font-weight 300
        font-size 12px
    .RadioGroupItem
      background-color white
      width 15px
      height 15px
      border-radius 100%
      cursor pointer
      .RadioGroupIndicator 
        display flex
        align-items center
        justify-content center
        width 100%
        height 100%
        position relative
        &::after 
          content ''
          position absolute
          display block
          width 4px
          height 4px
          border-radius 50%
          background-color green

:local(.InvoiceSettings)
  display flex
  color $color-less-white 
  width 100%
  .flexed
    padding-bottom 15px
    margin-top 20px
    display flex
    align-items center
    max-width 1000px
    justify-content space-between
    width 100%
    border-bottom 1px solid #8585852e
    form 
      width 600px
      margin-left 12px
      > div
        display flex
        > div
          min-height 0
          margin-right 12px
          label
            font-size 15px
      button
        margin-top 15px
      .help
        display flex
        align-items center
      .select
        width 100%
        margin 9px 0

:local(.ModalSubscription)
  .has_card_details
    height 300px
    display flex
    flex-direction column
    justify-content center
    align-items center
    .header
      font-size 19px
      margin-bottom 15px
    p
      font-weight 300
  label
    font-size 15px
  button
    width 100px
    margin 20px 0 20px
