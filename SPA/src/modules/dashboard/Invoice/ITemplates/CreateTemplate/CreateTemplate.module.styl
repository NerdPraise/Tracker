:local(.CreateTemplate)
  display flex
  position relative
  .panel
    width 400px
    height 750px
    background #4b4e55
    display flex
    &_menu
      height 100%
      width 50px
      padding 25px 5px
      background #1f2325
      display flex
      flex-direction column
      align-items center
      li
        list-style none
        cursor pointer
        margin-bottom 25px
        height 40px
        &:last-of-type
          border-top 1px solid white
          padding-top 20px
        p
          display none
          font-size 7px
          margin 0
        &:hover
          svg
            stroke #8a8a8a
          p
            display block
    &_menu_items
      background #4b4e55
      width 100%
      .colors
        display flex
        flex-direction column
        align-items center
        width 100%
        text-align center
        > div p
          margin 15px 0
  .template
    position relative
    width 700px
    margin-left 15px
    .background_s
      width 700px
    .layout
      background blue

  .widget
    &:hover
      border 1px dashed black
