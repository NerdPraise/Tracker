:local(.BaseWidget)
  height 100%
  .remove
    height 18px 
    width 15px
    cursor pointer
    position absolute
    top -7px
    right -28px
    z-index 99
    transition .5s
    &:hover
      border-radius 4px
      background #83aee6

      svg
        stroke #fff


:local(.moveable)
    :global(.moveable-control)
      width 7px !important
      height 7px !important
      margin-top -3px !important
      margin-left -3px !important
      border 2px solid #83aee6 !important
      z-index 90
    :global(.moveable-line)
      background none !important
      border 0.11px dashed #83aee6
      height 0.5px !important
      z-index 90 !important


:local(.dropdown)
  background $content-sidebar-gray
  > div
    padding-left 0
    width 100%
    > div
      width 100%
      padding 0 10px
      display flex
      align-items center
      height 40px
      cursor pointer
      &:hover
        background $content-gray-dark

:local(.align_dropdown)
  background $content-sidebar-gray
  display flex
  > div
    padding 10px
    height 40px
    cursor pointer
    &:hover
        background $content-gray-dark

