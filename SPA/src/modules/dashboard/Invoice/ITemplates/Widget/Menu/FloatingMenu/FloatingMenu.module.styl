:local(.FloatingMenuBar)
  .font_variant
    background $content-sidebar-gray
    margin-right 7px
    > div, svg 
      cursor pointer

:local(.dropdown)
  background $content-sidebar-gray
  min-width 200px
  > div
    padding-left 0
    width 100%
    > div
      width 100%
      padding 0 10px
      display flex
      align-items center
      height 40px
      cursor pointer
      &:hover
        background $content-gray-dark
