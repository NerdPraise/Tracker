:local(.ImageWidget)
  height 100%
  position relative
  .img_cont
    cursor pointer
    display flex
    align-items center
    justify-content center
    border-radius 2px
    background #83aee64a
    width fit-content
    width 100%
    height 100%
    .background
      width 0px
      svg
        position absolute
        width 100%
        height 100%
    .logo 
      background #528cd8
      border-radius 50%
      width 100%
      height 100%
      display flex
      justify-content center
      align-items center
      z-index 99
      svg
        cursor pointer
    .file_upload
      display none
      visibility hidden

:local(.ImageToolBar)
  display flex
  background $content-sidebar-gray
  > div
    display flex
    align-items center
    height 40px
    padding 5px 10px
    border-radius 3px
    cursor pointer

:local(.shape_styler)
  display flex
  gap 6px
  padding 10px
  > div
    cursor pointer
    display flex
    align-items center
    svg
      stroke #777676
    .hard_square
      height 20px
      width 20px
      border 2px solid #777676

:local(.SliderT)
  .Thumb
    height 12px
    width 12px
    cursor pointer
    background $content-sidebar-gray
  .Range
    background $content-sidebar-gray
