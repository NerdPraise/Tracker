:local(.InvoiceList) 
  display flex
  flex-direction column
  .header
    display flex
    justify-content space-between
    align-items center
    margin-bottom 30px
    height 50px
    .track_button
      border-radius 6px
      padding 2px 12px
      svg 
        width 14px
        height 15px
        margin-right 3px
      &:hover
        svg
          fill $color-green 
  .invoice_list
    height 100px
    .grid 
      height 550px
      :global(.ag-cell-focus)
        border 1px solid transparent !important
  .export 
    display flex
    justify-content center
    margin-top 15px
    p
      font-size 12px
      background grey
      text-align center
      border-radius 18px
      width fit-content
      padding 1px 8px
      cursor pointer
  

:local(.Tab)
  .filter
    display flex
    justify-content right
    margin-top 15px 
    > div
      height 70px
      width 150px
      margin-bottom 10px
  .tab_header
    display flex
    background mix($color-global-dark, #fff, 93%)
    height 50px
    align-items center
    > div
      width 70px
      display flex
      align-items center
      justify-content center
      height 100%
      padding 0 5px
      text-align center
      cursor pointer
      font-size 13px
      font-weight 600
      letter-spacing 1px
      &.active
        background mix($color-global-dark, #fff, 79%)

  .tab_body
    background mix($color-global-dark, #fff, 79%)
    height 600px
    padding 30px


:local(.InvoiceAdd)
  display flex
  flex-direction column
  .templates
    margin-top 30px
    .template_name
      font-size 45px
    .template_container
      display flex
      flex-wrap nowrap
      height 250px
      overflow-x scroll
      margin 20px 0 25px
      > div.template
        margin-right 30px
        min-width 190px
        cursor pointer
        :global(.children)
          padding 5px
      .card_image
        width 100%
        height 100%

:local(.TemplateModal)
  display flex
  .modal
    height 500px
  .modal_content
    display flex
    height 460px

  .template_image
    flex-basis 65%
    margin-right 15px
    padding-right 10px
    border-right 1px solid $color-light-backdrop

:local(.FrameDetails)
  flex-direction column
  display flex
  .frame_box
    display flex
    flex-direction column
    .preview_frame
      flex 1

:local(.InvoiceDetail)
  display flex
  flex-direction column
  .header
    display flex
    justify-content space-between
    align-items center
    margin-bottom 30px
    height 50px
    .edit_actions
      display flex
      justify-content space-between
      max-width 250px
      > button
        &:first-of-type
          margin-right 12px
        font-size 11px
        padding 4px 10px
  .details
    display flex
    .frame 
      width 100%
      .transactions
        display flex
        margin-top 40px
        .grid
          min-width 480px
          width 100%
          height 200px
    .client_actions
      margin-left 25px
      min-width 450px
      .preview
        button
          padding 10px 50px
          font-size 18px
          margin auto
      .card
        padding 15px
        text-align center
        margin-bottom 40px
        height 220px
        p
          font-weight 500
          font-size 20px
          margin-bottom 25px
        .card_paid
          display flex
          flex-direction column
          align-items center
          justify-content center
          text-emphasis center
          height 100%
          button
            padding 10px 50px
            font-size 18px



:local(.FrameDetailsModal)
  .send_to_client_form
    padding 20px 30px
  .input_group
    padding 20px 0 35px
    border-top 2px solid $color-light-ccc 
    border-bottom 2px solid $color-light-ccc 
    margin 20px 0
    .label_name
      margin-bottom 7px
      font-weight 600
      span 
        color $color-red
    input
      height 50px
  .send_btn > button
    margin-left auto
    font-size 20px
    padding 13px 35px
  .record_payment
    padding 20px 20px
    .input_group
      padding 20px 0 25px
      form > div
        margin-bottom 28px
    .select
      .label_name
        margin-bottom 17px

:local(.InvoiceEdit)
  display flex
  flex-direction column
  .header
    display flex
    justify-content space-between
    align-items center
    margin-bottom 30px
    height 50px
  .details
    display flex
    .frame 
      width 100%
    .form 
      margin-left 25px
      min-width 450px
      height 100%
      .form_card_children
        padding 15px
        max-width 450px
      .form_card
        height 100%
        .edit_input_group
          .dots_container
            display flex
            justify-content space-between
            align-items center
            .dots
              display flex
              .dot
                margin-right 6px
                height 7px
                min-width 7px
                border-radius 50%
                background grey
                cursor pointer
                &.dot_active
                  background white
          .invoice_items
            margin-top 35px
            .invoice_items_header
              display flex
              justify-content space-between
              align-items center
              svg
                cursor pointer
              h3
                margin-bottom 15px
            .input_group
              display none
            .active_it
              display block
      .halves
        display flex
        justify-content space-between
        flex-wrap wrap
        > div
          flex-basis 48%

