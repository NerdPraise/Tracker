:local(.InvoiceList) 
  display flex
  flex-direction column
  .header
    display flex
    justify-content space-between
    align-items center
    margin-bottom 30px
    height 50px
    &_btn
      display flex
      width 230px
      justify-content space-between
      > div
        flex-basis 48%

    .track_button
      border-radius 6px
      padding 2px 12px
      min-width 100px
      svg 
        margin-right 3px
  .invoice_list
    height 100px
    .grid 
      height 610px
      border-bottom none
      :global(.ag-cell-focus)
        border 1px solid transparent !important
      :global(.ag-root-wrapper.ag-ltr.ag-layout-normal)
        border-bottom none
        border-bottom-left-radius: 0
        border-bottom-right-radius: 0
      :global(.grid_click)
        cursor pointer
  .export 
    display flex
    justify-content center
    margin-top 15px
    p
      font-size 12px
      background grey
      text-align center
      border-radius 18px
      width fit-content
      padding 4px 8px
      cursor pointer
  

:local(.Tab)
  .filter
    display flex
    justify-content right
    > div
      height 70px
      width 230px
      margin-bottom 10px
      flex-direction row
      align-items center
      input 
        margin-left 12px
      label
        color $color-white-grey
        margin 0
  .tab_header
    display flex
    background mix($color-global-dark, #fff, 93%)
    height 50px
    align-items center
    > div
      width 70px
      display flex
      align-items center
      justify-content center
      height 100%
      padding 0 5px
      text-align center
      cursor pointer
      font-size 13px
      font-weight 600
      letter-spacing 1px
      &.active
        background mix($color-global-dark, #fff, 79%)

  .tab_body
    background mix($color-global-dark, #fff, 79%)
    height 700px
    padding 0 30px 30px


:local(.InvoiceAdd)
  display flex
  flex-direction column
  .header
    margin-bottom 30px
    height 50px
    h2
      margin-bottom 15px
      display flex
      align-items center
  .templates
    margin-top 30px
    .template_name
      font-size 45px
    .template_container
      display flex
      flex-wrap nowrap
      height 250px
      overflow-x auto
      margin 20px 0 25px
      > div.template
        margin-right 30px
        min-width 190px
        cursor pointer
        :global(.children)
          padding 5px
      .card_image
        width 100%
        height 100%

:local(.TemplateModal)
  display flex
  .modal
    height 500px
  .modal_content
    display flex
    height 460px

  .template_image
    flex-basis 65%
    margin-right 15px
    padding-right 10px
    border-right 1px solid $color-light-backdrop

:local(.FrameDetails)
  flex-direction column
  display flex
  .frame_box
    display flex
    flex-direction column
    .preview_frame
      flex 1

:local(.InvoiceDetail)
  display flex
  flex-direction column
  button
    p
      color #D2D5D9
  .header
    display flex
    justify-content space-between
    align-items center
    margin-bottom 30px
    height 50px
    h2
      display flex
      align-items center
      a
        margin-right 10px
        color inherit
        display flex
    .edit_actions
      display flex
      justify-content space-between
      width 250px
      > button
          flex-basis 48%
        padding 4px 10px
  .details
    display flex
    .frame 
      width 100%
      .transactions
        display flex
        margin-top 40px
        .grid
          min-width 480px
          width 100%
          height 200px
    .client_actions
      margin-left 25px
      min-width 450px
      .extra_btn
        button
          padding 10px 50px
          font-size 18px
          margin auto
          margin-bottom 18px
      .card
        padding 15px
        text-align center
        margin-bottom 40px
        height 220px
        p.card_paid_text
          font-weight 500
          font-size 20px
          margin-bottom 25px
        .card_paid
          display flex
          flex-direction column
          align-items center
          justify-content center
          text-emphasis center
          height 100%
          button
            padding 10px 50px
            font-size 18px

:local(.FrameDetailsModal)
  .send_to_client_form
    padding 20px 30px
  .input_group
    padding 20px 0 35px
    border-top 2px solid $color-light-ccc 
    border-bottom 2px solid $color-light-ccc 
    margin 20px 0
    .label_name
      margin-bottom 7px
      font-weight 600
      span 
        color $color-red
    input
      height 50px
  .send_btn > button
    margin-left auto
    font-size 17px
    padding 13px 35px
  .record_payment
    padding 20px 20px
    .input_group
      padding 20px 0 25px
      form > div
        margin-bottom 28px
    .select
      .label_name
        margin-bottom 17px

:local(.InvoiceEdit)
  display flex
  flex-direction column
  .header
    display flex
    justify-content space-between
    align-items center
    margin-bottom 30px
    height 50px
    h2
      display flex
      align-items center
      a
        margin-right 10px
        color inherit
        display flex
  .details
    display flex
    .frame 
      width 100%
    .form 
      margin-left 25px
      min-width 450px
      height 100%
      .form_card_children
        padding 15px
      .form_card
        height 800px
        overflow-y auto
        .btn_area
          display flex
          margin-bottom 2px
          button
            width 120px
          button:first-of-type
            margin-right 15px

        .edit_input_group
          .dots_container
            display flex
            justify-content space-between
            align-items center
            .dots
              display flex
              .dot
                margin-right 6px
                height 7px
                min-width 7px
                border-radius 50%
                background grey
                cursor pointer
                &.dot_active
                  background white
          .invoice_items
            margin-top 35px
            .invoice_items_header
              display flex
              justify-content space-between
              align-items center
              svg
                cursor pointer
              h3
                margin-bottom 15px
            .input_group
              display none
            .active_it
              display block
      .halves
        display flex
        justify-content space-between
        flex-wrap wrap
        > div
          flex-basis 48%
        .select
          margin 10px 0
  @media screen and (max-width:768px) 
     .details
        flex-direction column
        .form 
          margin-left 0px
          margin-top 25px
          min-width 450px
          height 100%

:local(.InvoicePreview)
  display flex
  position relative
  flex-direction column
  height 100vh
  > div
    margin 20px auto
  .banner
    height 250px
    width 350px
    position absolute
    right 35px
    top 40px
    padding 18px
    border-radius 12px
    box-shadow  -8px 7px 20px 0px mix($color-global-dark, #fff, 43%)
    > button
      margin-bottom 40px
      padding 10px 50px
      font-size 18px
      width 100%

:local(.payment_tab)
  display flex
  justify-content space-between
  .first
    width 100%
    h2 
      max-width 400px
    > p
      max-width 385px
      font-size 14px
      margin-top 13px

  .trigger
    all unset
    height 40px
    padding 10px
    display flex
    justify-content space-between
    width 250px
    border 1px solid $color-light-ccc
    font-size 12px
    display flex
    align-items center
    margin-bottom 12px
    border-radius 9px
    cursor pointer
    &[data-state='active']
      border 1px solid #c770fe
    .pricing
      text-align right
      .small
        font-size 9px
        margin-top 4px
  .tab_root
    display flex
    align-items center
    justify-content space-between
    width 100%
    margin-top -70px
    .tab_btn
      width 100%
      position absolute
      bottom 0
    .tab_content_cont
      margin-left 10px
      width 430px
      border-radius 12px
      height 500px
      padding 20px
      background $color-theme-dark
      > div
        position relative
        height 100%
      h5 
        font-size 25px
        margin-bottom 5px
      p.for
        font-size 15px
        margin-bottom 20px
        color #838181
      .price
        font-size 30px
      .month
        font-size 13px
        color #838181
      .features
        font-weight bold
        margin 25px 0 15px
      .offers
        display flex
        flex-wrap wrap
        p
          display flex
          align-items center
          flex-basis 49%
          margin-bottom 15px
          font-size 14px
          svg 
            margin-right 5px

:local(.formDropdown)
  height 220px
