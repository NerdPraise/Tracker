@import '_Images/global.styl'

:local(.container)
  display flex
  .content
    background $color-grey-dark
    width 100%
    flex-direction row
    height 100vh
    overflow-y scroll
    display flex
    .content-sidebar
      display flex
      height 100%
      background-color #2551c0
      flex-basis 50%
      justify-content center
      align-items center
    .content-children
      display flex
      flex-basis 50%
      justify-content center
      align-items center
