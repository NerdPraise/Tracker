@import '_Images/global.styl'

:local(.container)
  display flex
  overflow-y hidden

  .content
    background $content-gray-dark
    width 100%
    overflow-y scroll
    height 100vh

    &-children
      padding 30px

    
:local(.LayoutSide)
  .active
    background $color-green
    color $color-white-grey
    box-shadow 0px 3px 10px 0px $color-green-mid
  .sidebar-child
    &:hover
      box-shadow 0px 3px 10px 0px $color-green-mid


