:local(.Pill)
  display flex
  border-radius 18px
  width fit-content
  border 1.5px solid white
  justify-content center
  align-items center
  padding 10px 19px
  cursor pointer
  max-width 110px
  margin-right 15px

  &:global(.active)
    border 1.5px solid green

:local(.PillList)
  display flex
  margin 15px 0
