:local(.Modal)
  width 100%
  position fixed
  inset 0
  .backdrop
    background rgba(0, 0, 0, 39%)
    width 100%
    height 100vh
  .modal
    display flex
    flex-direction column
    min-height 300px
    position absolute
    top 20px
    left 0
    right 0
    margin 0 auto
    // transform translateY(-50%);
    background $content-sidebar-gray
    border-radius 10px
    .title
      border-bottom 1px solid $color-small-text
      padding 15px 20px
      font-size 20px
    .modal_content
      padding 20px
      height 100%
