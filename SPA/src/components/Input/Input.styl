@import '_Images/global.styl'

:local(.Input)
  width 100%
  display flex
  flex-direction column
  margin 15px 0

  input 
    height 35px
    background inherit
    border 1px solid #ccc
    border-radius 5px
    margin-top 10px
    color white
    &:focus
      outline none
  .error
    font-size 12px
    margin-top 2px
    color $color-error-red
