:local(.Slider)
  display flex
  width 100%
  height 100%
  position relative
  .slider_item_content
    display none
    position relative
    animation fadeOut 1.5s ease-in-out
    width 100%
    .image
      width 400px
      height 400px
      img
        width 100%
        height 100%
        border-radius 15px
  .active
    display flex
    align-items center
    flex-direction column
    justify-content center
  .slide_content > div
    text-align center
  .slider_item_details
    position absolute
    bottom 0
    .slider_item_title
      font-size 25px
      font-weight 800
      margin 10px 0
      text-align center
    .slider_item_description
      margin-bottom 10px
      font-size 13px
      text-align center
  .dot_container
    position absolute
    bottom 30px
    display flex
    left 40%
    .dot
      height 8px
      width 40px
      border 1px solid #fff
      border-radius 18px
      margin-left 15px
      transition 1s ease-in
      &.active
        background #fff
    
@keyframes fadeOut 
  from 
    opacity 0
  to 
    opacity 1
