:local(.Nav)
  display flex
  justify-content space-between
  align-items center
  padding 10px 
  height 70px
  .logo
    width 40px
    height 100%
    padding 5px 0;
  .nav_menu
    flex-basis 20%
    display flex
    ul 
      list-style none
      justify-content space-between
      display flex
      width 100%
      position relative
      padding 0
      li 
        position relative
        z-index 10
        padding 8px 0
        a
          margin 0 10px
          z-index 10
          color unset
      .active_menu
        background $content-sidebar-gray
        border-radius 15px
        position absolute
        opacity 1
        mix-blend-mode difference
        z-index -1
        inset 0
  .nav_login
    display flex
    padding 6px
    border-radius 9999px
    align-items center
    font-size 14px
    column-gap 5px
    background rgba(255, 255, 255, 0.2)
    box-shadow 0 4px 30px rgba(0, 0, 0, 0.1)
    backdrop-filter blur(5px)
    -webkit-backdrop-filter blur(5px)
    // border 1px solid rgba(255, 255, 255, 0.3)
    a
      color $color-light-ccc
      &:first-of-type
        padding 6px 10px
        border-top-left-radius 9999px
        border-top-right-radius 1500px
        border-bottom-right-radius 1500px
        border-bottom-left-radius 9999px
        background rgb(255 255 255 / 0.4)
        color rgb(40, 25, 80)
        transition .5s
        0 0 #0000
        box-shadow 0 1px 2px -1px rgb(0 0 0 / 0.1)
        &:hover
          color $color-purple

          
      &:nth-of-type(even)
        padding 6px 10px
        border-top-right-radius 9999px
        border-bottom-right-radius 9999px
        border-top-left-radius 1500px
        border-bottom-left-radius 1500px
        background #7c3aed
        background-image linear-gradient(270deg, #8052FF 0%, #F95FFF 100%)
        box-shadow 0px 2.65px 2.75px 0px #FFFFFF40 inset
        color white
       
    > span
      margin-left 20px
  .hamburger
    display none
  @media screen and (max-width: 600px) 
    .hamburger
      display block
    .nav_menu, .nav_login 
      display none
    .show 
      display block
    .hide 
      display none
