:local(.DatePicker)
  :global(.react-datepicker-wrapper)
    width 100%
  .input_date
    width 100%
    height 35px
    background inherit
    border 1px solid $color-light-ccc 
    border-radius 5px
    color $color-white-grey
    padding-left 10px
    margin-top 10px
    &:disabled
      background-color #555555
      cursor not-allowed
      pointer-events none
    &:focus
      outline none
  .form_label
    margin-bottom 10px
