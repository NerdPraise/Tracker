:local(.container)
  display flex
  width 100%
  max-width 1700px
  .content
    background $color-theme-dark
    width 100%
    flex-direction row
    height 100vh
    overflow-y auto
    display flex
    .content_sidebar
      display flex
      height 100%
      flex-basis 50%
      justify-content center
      align-items center
      padding 12px
    .content_children
      display flex
      flex-basis 50%
      justify-content center
      align-items center
      padding 0 40px
